generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Employee {
  id           Int       @id @default(autoincrement())
  name         String
  position     String
  contact      String
  officeId     Int
  office       Office    @relation(fields: [officeId], references: [id])
  attendances  Attendance[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Office {
  id          Int          @id @default(autoincrement())
  address     String
  description String?      
  shifts      Shift[]
  employees   Employee[]   
  attendances Attendance[] 
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Shift {
  id              Int        @id @default(autoincrement())
  officeId        Int
  clockIn         DateTime   
  clockOut        DateTime   
  office          Office     @relation(fields: [officeId], references: [id])
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

model Attendance {
  id           Int      @id @default(autoincrement())
  employeeId   Int
  officeId     Int
  clockIn      DateTime
  clockOut     DateTime?
  status       String   
  createdAt    DateTime @default(now())

  employee     Employee @relation(fields: [employeeId], references: [id])
  office       Office   @relation(fields: [officeId], references: [id]) 
}
